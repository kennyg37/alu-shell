#!/bin/bash

# The file path

file_path="/etc/passwd"

# IFS (Internal Field Separator) is set to :

IFS=:

# While loop to read the file line by line

while read -r username password userid groupid gecos homedir shell; do

		  echo "The user $username is part of the $groupid gang, lives in $homedir and rides $shell."

		  	    echo "$userid's place is protected by the passcode $password, more info about the user here: $gecos"

			        done < "$file_path"
